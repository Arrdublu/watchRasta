rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Lock down the database by default
    match /{document=**} {
      allow read, write: if false;
    }

    match /articles/{articleId} {
      // Anyone can read a published article
      allow read: if resource.data.status == 'Published';
      
      // Logged-in users can read their own non-published articles (for my-submissions page)
      allow get: if request.auth != null && request.auth.uid == resource.data.authorId;
      
      // Logged-in users can create articles
      allow create: if request.auth != null;
      
      // Only the author can update or delete their own article
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.authorId;

      // Allow creating versions for an article
      match /versions/{versionId} {
        allow create: if request.auth != null;
      }
    }

    match /collections/{collectionId} {
      allow read: if true;
    }

    match /products/{productId} {
      allow read: if true;
      allow create: if request.auth != null;
       // Only the author can update or delete their own product
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.authorId;
    }

    match /comments/{commentId} {
      allow read: if true;
      allow create: if request.auth != null;
    }
  }
}
