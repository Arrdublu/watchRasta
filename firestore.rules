
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow public read access to articles, products, and collections
    match /articles/{articleId} {
      allow read: if true;
      allow create: if request.auth != null; // Allow create for any signed-in user
      allow update, delete: if request.auth.uid == resource.data.authorId; // Allow update/delete only for the author
    }

    match /products/{productId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth.uid == resource.data.authorId;
    }

    match /collections/{collectionId} {
      allow read: if true;
      allow write: if false; // Collections are managed by the admin, not directly by users
    }

    // A more secure rule for a specific admin user
    match /{document=**} {
      allow write: if request.auth != null && request.auth.token.email == 'watchrasta@gmail.com';
    }
  }
}
