rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Publicly readable content
    match /images/{allPaths=**} {
      allow read;
    }

    // Articles - Allow authenticated users to read and write
    match /articles/{allPaths=**} {
      allow read, write: if request.auth != null;
    }

    // Products - Allow authenticated users to read and write
    match /products/{allPaths=**} {
      allow read, write: if request.auth != null;
    }
    
    // User-specific files
    match /users/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Protected media for purchased digital goods
    match /protected-media/{allPaths=**} {
      allow read: if false; // Deny all public read access
      allow write: if request.auth != null; // Allow authenticated users to write (e.g. admins)
    }
  }
}
