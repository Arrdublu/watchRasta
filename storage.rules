rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to all files
    match /{allPaths=**} {
      allow read;
    }

    // Allow write access only for authenticated users
    // This is a basic rule. For more fine-grained control, you could restrict
    // based on file size, type, or specific paths (e.g., match /articles/{articleId}).
    match /{allPaths=**} {
      allow write: if request.auth != null;
    }
  }
}
