rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to article and product files
    match /articles/{allPaths=**} {
      allow read;
    }
    match /products/{allPaths=**} {
      allow read;
    }

    // Allow authenticated users to write to any path
    match /{allPaths=**} {
      allow write: if request.auth != null;
    }
  }
}
