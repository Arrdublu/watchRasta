rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Publicly readable content
    match /images/{allPaths=**} {
      allow read;
    }

    // Articles
    match /articles/{allPaths=**} {
      allow read;
      allow create, update: if request.auth != null;
    }

    // Products
    match /products/{allPaths=**} {
      allow read;
      allow create, update: if request.auth != null;
    }

    // User-specific files
    match /users/{userId}/{allPaths=**} {
      allow read: if request.auth.uid == userId;
      allow write: if request.auth.uid == userId;
    }

    // Protected media for purchased digital goods
    match /protected-media/{allPaths=**} {
      allow read: if false; // Deny all public read access
      allow write: if request.auth != null; // Allow authenticated users to write (e.g. admins)
    }
  }
}
